@{
    ViewData["Title"] = "Add Movie";
}
@model mission6_andrewPotter.Models.Movie

<h1>
    Add Movie to The Database
</h1>

<form asp-controller="Home" asp-action="EditMovie" method="post">

    <input type="hidden" asp-for="MovieId" /> <!-- gets gets MovieId linked up -->

    <!-- Category (Dropdown) -->
    <label asp-for="CategoryId">Category</label>
    <select asp-for="CategoryId" class="form-control" required>
        <option value="">Select a Category</option>

        @foreach (var category in ViewData["Categories"] as List<mission6_andrewPotter.Models.Category>)
        {
            <option value="@category.CategoryId">@category.CategoryName</option>
        }
    </select>

    <!-- Title -->
    <label asp-for="Title">Title</label>
    <input asp-for="Title" class="form-control" required />

    <!-- Year -->
    <label asp-for="Year">Year</label>
    <input asp-for="Year" class="form-control" type="number" min="1888" max="2100" required />

    <!-- Director -->
    <label asp-for="Director">Director</label>
    <input asp-for="Director" class="form-control" />

    <!-- Rating (Dropdown) -->
    <label asp-for="Rating">Rating</label>
    <select asp-for="Rating" class="form-control">
        <option value="">Select a rating</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>

    <!-- Edited (Yes/No Checkbox) -->
    <label asp-for="Edited">Edited</label>
    <input asp-for="Edited" class="form-check-input" type="checkbox" />

    <!-- Lent To (Optional) -->
    <label asp-for="LentTo">Lent To</label>
    <input asp-for="LentTo" class="form-control" />

    <!-- Notes (Optional, Max 25 Characters) -->
    <label asp-for="Notes">Notes</label>
    <input asp-for="Notes" class="form-control" maxlength="25" />

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary">Edit Movie</button>
</form>
